{
  "info": {
    "name": "Blog API Collection",
    "_postman_id": "c1f9c1b2-1234-4abc-8def-123456789000",
    "description": "Full API testing collection with auto token saving",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"123\",\n  \"role\": \"Creator\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Мой первый пост\",\n  \"content\": \"Текст поста\",\n  \"tags\": [\"js\", \"web\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts"]
            }
          }
        },
        {
          "name": "Get All Posts (Search)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/posts?search=Мой",
              "host": ["{{baseUrl}}"],
              "path": ["posts"],
              "query": [
                { "key": "search", "value": "Мой" }
              ]
            }
          }
        },
        {
          "name": "Get All Posts (Tag Filter)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/posts?tag=js",
              "host": ["{{baseUrl}}"],
              "path": ["posts"],
              "query": [
                { "key": "tag", "value": "js" }
              ]
            }
          }
        },
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "url": {
              "raw": "{{baseUrl}}/posts/{{postId}}/like",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "{{postId}}", "like"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Follow User",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "url": {
              "raw": "{{baseUrl}}/users/follow/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "follow", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get Followers",
          "request": {
            "method": "GET",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "url": {
              "raw": "{{baseUrl}}/users/followers",
              "host": ["{{baseUrl}}"],
              "path": ["users", "followers"]
            }
          }
        },
        {
          "name": "Remove Follower",
          "request": {
            "method": "DELETE",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "url": {
              "raw": "{{baseUrl}}/users/followers/{{followerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "followers", "{{followerId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Крутой пост!\",\n  \"postId\": \"{{postId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["comments"]
            }
          }
        }
      ]
    }
  ]
}